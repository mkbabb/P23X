				;    a   = 1.0;                          // a0 = 1
				;    b   = 1.0 / sqrt (2.0);             // b0  = 1 / sqrt(2)
				;    s   = 1.0;                          // s is the sum in the denominator
				;    t   = 1.0;                          // the first value of 2**k when k = 0
				;    old = 0.0;                          // last value of pi calculated
